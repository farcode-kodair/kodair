const GRAVITY = 0.04


def make_ball(boat, offset_angle):
    const dir = angle_to_xy(boat.angle + offset_angle)
    
    return make_entity({
        name: "CannonBall",
        pos: xyz(boat.pos + 40% boat.size.y * boat.scale.y * dir, 1),
        vel: xyz(0.7 dir, 1) + xyz(boat.vel, 0),
        sprite: shapes.disk,
        scale: 10%,
        override_color: #000})



def ball_simulate(ball, world):
    ball.vel.z -= GRAVITY
    ball.pos += ball.vel
